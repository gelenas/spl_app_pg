<div class="jumbotron">
<div class="container">
	<% provide(:title, @user.name) %>
	<div class="row">
  		<div class="col-xs-1 col-md-3">
      		<p>
        	<%= @user.name %>
        	<%= @user.email %>
      		</p>
  		</div>

  		  <div class="col-xs-12">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>


	</div>
</div>
</div>

